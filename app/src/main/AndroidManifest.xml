<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.alexeysekatskiy.currencyconverter">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/preview_152825_1603822968"
        android:label="@string/app_name"
        android:roundIcon="@drawable/preview_152825_1603822968"
        android:supportsRtl="true"
        android:theme="@style/Theme.CurrencyConverter"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".CurrencySelectionDialog"
            android:label="@string/title_activity_currency_selection_dialog"
            android:theme="@style/Theme.CurrencyConverter.NoActionBar" />

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>